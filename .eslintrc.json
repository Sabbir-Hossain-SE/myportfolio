{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier",
        "airbnb" 
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react","prettier"
    ],
    "rules": {
        "prettier/prettier": ["error"],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "semi": 0,
        "object-curly-newline": 0,
        "arrow-parens": ["error", "as-needed"],
        "react/jsx-props-no-spreading": 0,
        "linebreak-style": 0,
        "no-unused-vars": "warn",
        "no-console":"off",
        "func-names":"off",
        "class-methods-use-this":"off"

    }
}
